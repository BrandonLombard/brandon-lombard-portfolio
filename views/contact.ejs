<section class="contact">
    <div class="container">
        <h1>Contact Me</h1>
        <!-- Display success message if form was submitted successfully -->
        <% if (typeof success !=='undefined' && success) { %>
            <div class="success-message">
                <p>
                    <%= success %>
                </p>
            </div>
            <% } else { %>
                <p>If you'd like to get in touch, fill out the form below.</p>

                <!-- Display error message if form submission failed -->
                <% if (typeof error !=='undefined' && error) { %>
                    <div class="error-message">
                        <p style="color: red;">
                            <%= error %>
                        </p>
                    </div>
                    <% } %>

                        <form id="contactForm" action="/submit-form" method="POST">
                            <div class="form-group">
                                <label for="name">Name <span class="required">*</span></label>
                                <input type="text" id="name" name="name" required>
                            </div>
                            <div class="form-group">
                                <label for="email">Email <span class="required">*</span></label>
                                <input type="email" id="email" name="email" required>
                            </div>
                            <div class="form-group">
                                <label for="phone">Phone Number</label>
                                <input type="tel" id="phone" name="phone">
                            </div>
                            <div class="form-group">
                                <label for="message">Message <span class="required">*</span></label>
                                <textarea id="message" name="message" rows="5" required></textarea>
                            </div>

                            <!-- Cloudflare Turnstile CAPTCHA -->
                            <div class="cf-turnstile" data-sitekey="0x4AAAAAAA9Xalyc_NxIWaEU"></div>

                            <button type="submit" class="btn-submit">Send Message</button>
                        </form>
                        <% } %>
    </div>
</section>

<!-- Load Turnstile Script -->
<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>