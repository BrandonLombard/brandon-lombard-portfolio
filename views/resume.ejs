<section class="resume">
    <h1 class="merriweather">Resume</h1>
    <p class="description">I’m a Health Informatics Specialist and Full-Stack Developer with a passion for using
        technology to make healthcare better for both providers and patients. I’ve worked on everything from EHR systems
        to backend optimization and full-stack apps, always focused on building secure, efficient, and user-friendly
        solutions. I’m also really passionate about computer science education and love finding creative ways to make
        coding fun and engaging, especially for students and beginners. I’m looking for a role where I can combine my
        experience in health tech and programming education to streamline workflows, spark innovation, and support the
        people who depend on these systems every day.</p>
    <!-- Work Experience Section -->
    <div class="resume-section">
        <h2 class="section-title">Work Experience</h2>
        <% workExperience.forEach(job=> { %>
            <div class="card">
                <div class="card-type">
                    <%= job.title %>
                </div>
                <p class="card-name">
                    <%= job.company %>
                </p>
                <%= job.start_date ? (()=> {
                    const date = new Date(job.start_date);
                    const utcMonth = (date.getUTCMonth() + 1).toString().padStart(2, '0'); // Month in UTC
                    const utcDay = date.getUTCDate().toString().padStart(2, '0'); // Day in UTC
                    const utcYear = date.getUTCFullYear(); // Year in UTC
                    return `${utcMonth}/${utcDay}/${utcYear}`;
                    })()
                    : 'Current'
                    %> -
                    <%= job.end_date ? (()=> {
                        const date = new Date(job.end_date);
                        const utcMonth = (date.getUTCMonth() + 1).toString().padStart(2, '0'); // Month in UTC
                        const utcDay = date.getUTCDate().toString().padStart(2, '0'); // Day in UTC
                        const utcYear = date.getUTCFullYear(); // Year in UTC
                        return `${utcMonth}/${utcDay}/${utcYear}`;
                        })()
                        : 'Current'
                        %>

                        <ul>
                            <% job.bullet_points.forEach(bullet=> { %>
                                <li>
                                    <%= bullet %>
                                </li>
                                <% }) %>
                        </ul>

            </div>
            <% }) %>
    </div>

    <!-- Education Section -->
    <div class="resume-section">
        <h2 class="section-title">Education</h2>
        <% education.forEach(degree=> { %>
            <div class="card">
                <div class="card-type">
                    <%= degree.type %>
                </div>
                <p class="card-name">
                    <%= degree.name %>
                </p>
                <% if (degree.concentration) { %>
                    <p class="concentration"><strong>Concentration:</strong>
                        <%= degree.concentration %>
                    </p>
                    <% } %>
                        <p class="school"><strong>School:</strong>
                            <%= degree.school %>
                        </p>
                        <p class="graduation-date">
                            <strong>Graduated:</strong>
                            <%= degree.date_graduated ? (()=> {
                                const date = new Date(degree.date_graduated);
                                const utcMonth = (date.getUTCMonth() + 1).toString().padStart(2, '0'); // Month in UTC
                                const utcDay = date.getUTCDate().toString().padStart(2, '0'); // Day in UTC
                                const utcYear = date.getUTCFullYear(); // Year in UTC
                                return `${utcMonth}/${utcDay}/${utcYear}`;
                                })()
                                : 'Not Yet'
                                %>
                        </p>
            </div>
            <% }) %>
    </div>
</section>