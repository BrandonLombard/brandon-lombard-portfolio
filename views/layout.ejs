    <main>
        <div class="container">
            <%- body %> <!-- Content from other views will be injected here -->
        </div>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2025 Brandon Lombard</p>
        </div>
    </footer>

    <script src="/js/script.js"></script>
