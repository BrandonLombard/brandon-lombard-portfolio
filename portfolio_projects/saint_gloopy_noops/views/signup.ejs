<div class="login-signup signup">
    <h2>Sign Up</h2>
    <form action="/saint-gloopy-noops/signup" method="POST">
        <input type="text" name="firstname" placeholder="First Name" required>
        <input type="text" name="lastname" placeholder="Last Name" required>
        <input type="text" name="username" placeholder="Username" required>
        <input type="password" name="password" placeholder="Password" required>

        <!-- Choose tpye of account -->
        <label for="account-type">Type of Account:</label>
        <select id="account-type">
            <option value="Provider" selected>Provider</option>
            <option value="Administrator">Administrator</option>
            <option value="Patient">Patient</option>
        </select>


        <!-- Cloudflare Turnstile CAPTCHA -->
        <div class="cf-turnstile" data-sitekey="0x4AAAAAAA9Xalyc_NxIWaEU"></div>

        <button type="submit">Sign Up</button>
    </form>
    <a href="/saint-gloopy-noops/login" class="form-link">Already have an account? Login</a>
</div>

<!-- Load Turnstile Script -->
<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>